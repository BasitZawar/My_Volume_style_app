<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/hidden_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <com.lukelorusso.verticalseekbar.VerticalSeekBar
                        android:id="@+id/android_music_seekBar_hidden"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:vsb_bar_background="#d7d7d7"
                        app:vsb_bar_corner_radius="25dp"
                        app:vsb_bar_progress_gradient_end="#4D64DF"
                        app:vsb_bar_progress_gradient_start="#03a2ba"
                        app:vsb_bar_width="50dp"
                        app:vsb_click_to_set_progress="true"
                        app:vsb_max_placeholder_position="inside"
                        app:vsb_min_placeholder_position="inside"
                        app:vsb_thumb_container_corner_radius="5dp" />

                    <ImageView
                        android:id="@+id/android_music_image_hidden"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/ic_android_music_note"
                        app:layout_constraintBottom_toBottomOf="@+id/android_music_seekBar_hidden"
                        app:layout_constraintEnd_toEndOf="@+id/android_music_seekBar_hidden"
                        app:layout_constraintStart_toStartOf="@+id/android_music_seekBar_hidden"
                        app:layout_constraintTop_toTopOf="@+id/android_music_seekBar_hidden" />

                    <com.lukelorusso.verticalseekbar.VerticalSeekBar
                        android:id="@+id/android_ring_seekBar"
                        android:layout_width="50dp"
                        android:layout_height="200dp"

                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/android_music_seekBar_hidden"
                        app:layout_constraintTop_toTopOf="parent"
                        app:vsb_bar_background="#d7d7d7"
                        app:vsb_bar_corner_radius="25dp"
                        app:vsb_bar_progress_gradient_end="#4D64DF"
                        app:vsb_bar_progress_gradient_start="#03a2ba"
                        app:vsb_bar_width="50dp"
                        app:vsb_click_to_set_progress="true"
                        app:vsb_max_placeholder_position="inside"
                        app:vsb_min_placeholder_position="inside"
                        app:vsb_thumb_container_corner_radius="5dp" />

                    <ImageView
                        android:id="@+id/android_ring_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/ic_notifications_android"
                        app:layout_constraintBottom_toBottomOf="@+id/android_ring_seekBar"
                        app:layout_constraintEnd_toEndOf="@+id/android_ring_seekBar"
                        app:layout_constraintStart_toStartOf="@+id/android_ring_seekBar"
                        app:layout_constraintTop_toTopOf="@+id/android_ring_seekBar" />


                    <com.lukelorusso.verticalseekbar.VerticalSeekBar
                        android:id="@+id/android_alarm_seekBar"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/android_ring_seekBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:vsb_bar_background="#d7d7d7"
                        app:vsb_bar_corner_radius="25dp"
                        app:vsb_bar_progress_gradient_end="#4D64DF"
                        app:vsb_bar_progress_gradient_start="#03a2ba"
                        app:vsb_bar_width="50dp"
                        app:vsb_click_to_set_progress="true"
                        app:vsb_max_placeholder_position="inside"
                        app:vsb_min_placeholder_position="inside"
                        app:vsb_thumb_container_corner_radius="5dp" />

                    <ImageView
                        android:id="@+id/android_alarm_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/ic_alarm_android"
                        app:layout_constraintBottom_toBottomOf="@+id/android_alarm_seekBar"
                        app:layout_constraintEnd_toEndOf="@+id/android_alarm_seekBar"
                        app:layout_constraintStart_toStartOf="@+id/android_alarm_seekBar"
                        app:layout_constraintTop_toTopOf="@+id/android_alarm_seekBar" />

                    <com.lukelorusso.verticalseekbar.VerticalSeekBar
                        android:id="@+id/android_call_seekBar"
                        android:layout_width="50dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/android_alarm_seekBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:vsb_bar_background="#d7d7d7"
                        app:vsb_bar_corner_radius="25dp"
                        app:vsb_bar_progress_gradient_end="#4D64DF"
                        app:vsb_bar_progress_gradient_start="#03a2ba"
                        app:vsb_bar_width="50dp"
                        app:vsb_click_to_set_progress="true"
                        app:vsb_max_placeholder_position="inside"
                        app:vsb_min_placeholder_position="inside"
                        app:vsb_thumb_container_corner_radius="5dp" />

                    <ImageView
                        android:id="@+id/android_call_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/ic_call_android"
                        app:layout_constraintBottom_toBottomOf="@+id/android_call_seekBar"
                        app:layout_constraintEnd_toEndOf="@+id/android_call_seekBar"
                        app:layout_constraintStart_toStartOf="@+id/android_call_seekBar"
                        app:layout_constraintTop_toTopOf="@+id/android_call_seekBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>