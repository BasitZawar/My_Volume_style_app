<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lukelorusso.verticalseekbar.VerticalSeekBar
        android:id="@+id/ios_music_seekbar"
        android:layout_width="40dp"
        android:layout_height="180dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:vsb_bar_background="@color/black"
        app:vsb_bar_corner_radius="10dp"
        app:vsb_bar_width="40dp"
        app:vsb_click_to_set_progress="true"
        app:vsb_show_thumb="true"
        app:vsb_thumb_container_corner_radius="100dp"
        app:vsb_use_thumb_to_set_progress="true"
        tools:ignore="MissingClass" />
<!--    app:vsb_bar_progress_gradient_end="@color/grey"-->
<!--    app:vsb_bar_progress_gradient_start="@color/black"-->

    <ImageView
        android:id="@+id/ios_music_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_ios_music"
        app:layout_constraintBottom_toBottomOf="@+id/ios_music_seekbar"
        app:layout_constraintEnd_toEndOf="@+id/ios_music_seekbar"
        app:layout_constraintStart_toStartOf="@+id/ios_music_seekbar"
        app:layout_constraintTop_toTopOf="@+id/ios_music_seekbar" />

    <ImageButton
        android:id="@+id/btn_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_shape_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ios_music_seekbar" />
<!--    android:src="@drawable/ic_baseline_navigate_next_24"-->


</androidx.constraintlayout.widget.ConstraintLayout>