        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center">


            <com.lukelorusso.verticalseekbar.VerticalSeekBar
                android:id="@+id/android11_music_seekbar"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:vsb_bar_background="#E2E3E5"
                app:vsb_bar_corner_radius="20dp"
                app:vsb_bar_progress_gradient_end="#FFFF"
                app:vsb_bar_progress_gradient_start="#F5FFFFFF"
                app:vsb_bar_width="40dp"
                app:vsb_click_to_set_progress="true"
                app:vsb_progress="50"
                app:vsb_show_thumb="true"
                app:vsb_thumb_container_corner_radius="100dp"
                app:vsb_use_thumb_to_set_progress="true" />

            <ImageView
                android:id="@+id/android11_music_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/ic_music_window10"
                app:layout_constraintBottom_toBottomOf="@+id/android11_music_seekbar"
                app:layout_constraintEnd_toEndOf="@+id/android11_music_seekbar"
                app:layout_constraintStart_toStartOf="@+id/android11_music_seekbar"
                app:layout_constraintTop_toTopOf="@+id/android11_music_seekbar" />

<!--            <ImageView-->
<!--                android:id="@+id/btn_show_more"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:src="@drawable/ic_show_more_android11"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/android11_music_seekbar"-->
<!--                app:layout_constraintStart_toStartOf="@+id/android11_music_seekbar"-->
<!--                app:layout_constraintTop_toTopOf="@+id/android11_music_seekbar" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/android11_hidden_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/android11_music_seekbar"
                app:layout_constraintTop_toTopOf="parent">

                <com.lukelorusso.verticalseekbar.VerticalSeekBar
                    android:id="@+id/android11_ring_seekbar"
                    android:layout_width="40dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vsb_bar_background="#E2E3E5"
                    app:vsb_bar_corner_radius="20dp"
                    app:vsb_bar_progress_gradient_end="#FFFF"
                    app:vsb_bar_progress_gradient_start="#F5FFFFFF"
                    app:vsb_bar_width="40dp"
                    app:vsb_click_to_set_progress="true"
                    app:vsb_progress="50"
                    app:vsb_show_thumb="true"
                    app:vsb_thumb_container_corner_radius="100dp"
                    app:vsb_use_thumb_to_set_progress="true" />

                <ImageView
                    android:id="@+id/android11_ring_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/ic_notification_window10"
                    app:layout_constraintBottom_toBottomOf="@+id/android11_ring_seekbar"
                    app:layout_constraintEnd_toEndOf="@+id/android11_ring_seekbar"
                    app:layout_constraintStart_toStartOf="@+id/android11_ring_seekbar"
                    app:layout_constraintTop_toTopOf="@+id/android11_ring_seekbar" />

                <com.lukelorusso.verticalseekbar.VerticalSeekBar
                    android:id="@+id/android11_alarm_seekbar"
                    android:layout_width="40dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/android11_ring_seekbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vsb_bar_background="#E2E3E5"
                    app:vsb_bar_corner_radius="20dp"
                    app:vsb_bar_progress_gradient_end="#FFFF"
                    app:vsb_bar_progress_gradient_start="#F5FFFFFF"
                    app:vsb_bar_width="40dp"
                    app:vsb_click_to_set_progress="true"
                    app:vsb_progress="50"
                    app:vsb_show_thumb="true"
                    app:vsb_thumb_container_corner_radius="100dp"
                    app:vsb_use_thumb_to_set_progress="true" />

                <ImageView
                    android:id="@+id/android11_alarm_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/ic_alarm_window10"
                    app:layout_constraintBottom_toBottomOf="@+id/android11_alarm_seekbar"
                    app:layout_constraintEnd_toEndOf="@+id/android11_alarm_seekbar"
                    app:layout_constraintStart_toStartOf="@+id/android11_alarm_seekbar"
                    app:layout_constraintTop_toTopOf="@+id/android11_alarm_seekbar" />

                <com.lukelorusso.verticalseekbar.VerticalSeekBar
                    android:id="@+id/android11_call_seekbar"
                    android:layout_width="40dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/android11_alarm_seekbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vsb_bar_background="#E2E3E5"
                    app:vsb_bar_corner_radius="20dp"
                    app:vsb_bar_progress_gradient_end="#FFFF"
                    app:vsb_bar_progress_gradient_start="#F5FFFFFF"
                    app:vsb_bar_width="40dp"
                    app:vsb_click_to_set_progress="true"
                    app:vsb_progress="50"
                    app:vsb_show_thumb="true"
                    app:vsb_thumb_container_corner_radius="100dp"
                    app:vsb_use_thumb_to_set_progress="true" />

                <ImageView
                    android:id="@+id/android11_call_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/ic_call_window10"
                    app:layout_constraintBottom_toBottomOf="@+id/android11_call_seekbar"
                    app:layout_constraintEnd_toEndOf="@+id/android11_call_seekbar"
                    app:layout_constraintStart_toStartOf="@+id/android11_call_seekbar"
                    app:layout_constraintTop_toTopOf="@+id/android11_call_seekbar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.cardview.widget.CardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>